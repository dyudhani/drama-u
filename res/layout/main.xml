<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="50dp">
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="match_parent" android:gravity="center" android:layout_alignParentLeft="true" android:layout_width="50dp">
            <TextView android:background="@drawable/menu" android:layout_height="30dp" android:layout_width="33dp" android:id="@+id/menu"></TextView>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="match_parent" android:gravity="center" android:layout_centerInParent="true" android:layout_width="150dp">
            <TextView android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="Drama U" android:textSize="20dp"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:gravity="center" android:layout_height="170dp">
        <TextView android:id="@+id/textView4" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/banner"></TextView>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
        <LinearLayout android:id="@+id/linearLayout5" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/to_romance">
                <LinearLayout android:layout_marginLeft="10dp" android:gravity="center" android:layout_width="50dp" android:id="@+id/LinearLayout05" android:layout_height="match_parent">
                    <TextView android:layout_height="45dp" android:id="@+id/TextView03" android:layout_width="45dp" android:background="@drawable/heart"></TextView>
                </LinearLayout>
                <LinearLayout android:layout_marginLeft="20dp" android:gravity="center" android:layout_width="200dp" android:id="@+id/LinearLayout04" android:layout_height="match_parent">
                    <TextView android:layout_height="wrap_content" android:id="@+id/TextView04" android:layout_width="200dp" android:textSize="25dp" android:text="Romance"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/to_comedy">
                <LinearLayout android:layout_marginLeft="10dp" android:gravity="center" android:layout_width="50dp" android:id="@+id/linearLayout6" android:layout_height="match_parent">
                    <TextView android:id="@+id/textView6" android:layout_width="45dp" android:layout_height="45dp" android:background="@drawable/drama"></TextView>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_width="200dp" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:id="@+id/LinearLayout01">
                    <TextView android:layout_height="wrap_content" android:id="@+id/TextView05" android:layout_width="200dp" android:textSize="25dp" android:text="Comedy"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/to_fantasy">
                <LinearLayout android:layout_marginLeft="10dp" android:gravity="center" android:layout_width="50dp" android:id="@+id/LinearLayout03" android:layout_height="match_parent">
                    <TextView android:id="@+id/TextView01" android:layout_height="45dp" android:layout_width="45dp" android:background="@drawable/wizard"></TextView>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_width="200dp" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:id="@+id/LinearLayout02">
                    <TextView android:layout_height="wrap_content" android:id="@+id/TextView02" android:layout_width="200dp" android:textSize="25dp" android:text="Fantasy"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
