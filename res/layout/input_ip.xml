<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:text="Masukkan Ip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="30dp"></TextView>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="masukkan ip anda" android:id="@+id/input_ip"></EditText>
    <Button android:text="Kirim" android:layout_width="wrap_content" android:id="@+id/kirim_ip" android:layout_height="wrap_content"></Button>
</LinearLayout>
